<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CheckMarkStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- 主色调：微信绿色 -->
        <item name="colorPrimary">@color/wechat_green</item>
        <item name="colorPrimaryVariant">@color/wechat_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 次级色调：保持中性 -->
        <item name="colorSecondary">@color/gray_200</item>
        <item name="colorSecondaryVariant">@color/gray_500</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- 状态栏：半透明+深色图标 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <!-- 背景色：微信的浅灰色背景 -->
        <item name="android:windowBackground">@color/wechat_bg</item>

        <!-- 全面屏适配 -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- 禁用默认的ActionBar阴影 -->
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>