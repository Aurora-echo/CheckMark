<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F0F1F3"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!-- 事项名称标题 - iOS风格卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/ios_card_background"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="#000000"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/Check_Setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:layout_marginTop="6dp"
                android:src="@drawable/check_setting" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/ios_card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:id="@+id/iv_reminder_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/knock"
                            android:visibility="gone"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_reminder_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textColor="#0e5d9d"
                            android:text="未设置提醒"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:background="@drawable/check_done_total_count"
                android:layout_marginEnd="12dp">

                <TextView
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总共累计"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:32"
                    android:textColor="#FFFFFF"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tv_ramdom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="励志话语"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <!-- 上方小卡片 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/check_done_total_count"
                    android:layout_marginBottom="6dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_Month_Count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本月累计"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

                <!-- 下方小卡片 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/check_done_total_count"
                    android:layout_marginTop="6dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_Week_Count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本周累计"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- 日历统计视图 - iOS风格卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ios_card_background"
            android:layout_marginBottom="24dp">

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:mcv_showOtherDates="all"
                app:mcv_selectionColor="#0e5d9d"
                app:mcv_tileSize="36dp"
                app:mcv_arrowColor="#0e5d9d"
                tools:ignore="MissingClass" />
        </LinearLayout>

        <!-- 圆形记录按钮 - iOS风格 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_record"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:src="@drawable/done"
                app:backgroundTint="#0e5d9d"
                app:elevation="5dp"
                app:pressedTranslationZ="8dp"
                android:contentDescription="记录事项完成"
                android:scaleType="centerInside"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>